{
  "scheming_version": 1,
  "dataset_type": "geographic-data-package",
  "name": "Geographic Data",
  "about": "",
  "about_url": "http://github.com/ckan/ckanext-scheming",
  "add_data_on_create": false,
  "dataset_fields": [{
      "field_name": "title",
      "label": "Title",
      "preset": "title",
      "form_placeholder": "eg. A descriptive title"
    },
    {
      "field_name": "name",
      "label": "URL",
      "preset": "dataset_slug",
      "form_placeholder": "eg. my-dataset"
    },
    {
      "field_name": "notes",
      "label": "Description",
      "form_snippet": "markdown.html",
      "form_placeholder": "eg. Some useful notes about the data. Please write a little about where this data came from and give any relevant references"
    },
    {
      "field_name": "tag_string",
      "label": "Tags",
      "preset": "tag_string_autocomplete",
      "form_placeholder": "Geographic, Naomi",
      "default": "Geographic, Naomi"
    },
    {
      "field_name": "license_id",
      "label": "License",
      "form_snippet": "license.html",
      "help_text": "License definitions and additional information can be found at http://opendefinition.org/"
    },
    {
      "field_name": "year",
      "label": "Year",
      "preset": "year"
    },
    {
      "field_name": "geo-location",
      "label": "Geographical Location",
      "form_placeholder": "Country or province",
      "preset": "country_list",
      "display_property": "dc:contributor"
    },
    {
      "field_name": "owner_org",
      "label": "Organization",
      "preset": "dataset_organization"
    },
    {
      "field_name": "url",
      "label": "Source",
      "form_placeholder": "http://example.com/dataset.json",
      "display_property": "foaf:homepage",
      "display_snippet": "link.html"
    },
    {
      "field_name": "version",
      "label": "Version",
      "validators": "ignore_missing unicode package_version_validator",
      "form_placeholder": "1.0"
    },
    {
      "field_name": "maintainer",
      "label": "Maintainer",
      "form_placeholder": "Joe Bloggs",
      "display_property": "dc:contributor"
    },
    {
      "field_name": "maintainer_email",
      "label": "Maintainer Email",
      "form_placeholder": "joe@example.com",
      "display_property": "dc:contributor",
      "display_snippet": "email.html",
      "display_email_name_field": "maintainer"
    }
  ],
  "resources": [{
      "name": "Location Hierachy",
      "about": "A validated Location Hierachy.",
      "resource_type": "geographic-location-hierachy",
      "display_group_order": ["General", "Geographic Metadata", "Access Restriction"],
      "resource_fields": [{
        "field_name": "name",
        "preset": "hidden_value",
        "field_value": "Location Hierachy"
      }, {
        "field_name": "description",
        "preset": "hidden_value",
        "field_value":  "A validated Location Hierachy."
      }, {
        "field_name": "schema",
        "preset": "hidden_value",
        "field_value": "geographic_location_hierachy"
      }, {
        "field_name": "resource_type",
        "preset": "hidden_value",
        "field_value": "geographic-location-hierachy"
      }, {
        "field_name": "iso3",
        "label": "Country ISO3 Code",
        "required": true,
        "display_group": "Geographic Metadata"
      }, {
        "field_name": "pepfar_psnu",
        "label": "PEPFAR PSNU Admin Level Number",
        "default_jinja2": "0",
        "group": "general",
        "validators": "convert_int",
        "display_group": "Geographic Metadata"
      }, {
        "field_name": "epp_level",
        "label": "Admin Level EPP is run for (if any)",
        "default_jinja2": "0",
        "group": "general",
        "validators": "convert_int",
        "display_group": "Geographic Metadata"
      }, {
        "field_name": "spectrum_level",
        "label": "Admin Level Spectrum is run for (if any)",
        "default_jinja2": "0",
        "group": "general",
        "validators": "convert_int",
        "display_group": "Geographic Metadata"
      }, {
        "field_name": "level1_name",
        "label": "Admin Level 1 Name",
        "default_jinja2": "region",
        "required": true,
        "display_group": "Geographic Metadata"
      }, {
        "field_name": "level2_name",
        "label": "Admin Level 2 Name (if used)",
        "default_jinja2": "district",
        "display_group": "Geographic Metadata"
      }, {
        "field_name": "level3_name",
        "label": "Admin Level 3 Name (if used)",
        "form_placeholder": "e.g. ward",
        "display_group": "Geographic Metadata"
      }, {
        "field_name": "level4_name",
        "label": "Admin Level 4 Name (if used)",
        "display_group": "Geographic Metadata"
      }]
    }, {
        "name": "Facilities List",
        "about": "A validated Facilities list.",
        "resource_type": "geographic-facilities-list",
        "resource_fields": [{
          "field_name": "name",
          "preset": "hidden_value",
          "field_value": "Facilities List"
        }, {
          "field_name": "description",
          "preset": "hidden_value",
          "field_value":  "A validated facilities list."
        }, {
          "field_name": "schema",
          "preset": "hidden_value",
          "field_value": "geographic_facilities"
        }, {
          "field_name": "resource_type",
          "preset": "hidden_value",
          "field_value": "geographic-facilities-list"
        }]
    }, {
      "name": "Regional Geometry",
      "about": "A validated SHP or GeoJSON geometry file.",
      "resource_type": "geographic-regional-geometry",
      "resource_fields": [{
        "field_name": "name",
        "preset": "hidden_value",
        "field_value": "Regional Geometry"
      }, {
        "field_name": "description",
        "preset": "hidden_value",
        "field_value": "A validated geometry file in SHP or GeoJSON format."
      },{
        "field_name": "format",
        "label": "Format",
        "preset": "resource_format_autocomplete",
        "required": true,
        "default_jinja2": "geojson"
      },{
        "field_name": "resource_type",
        "preset": "hidden_value",
        "field_value": "geographic-regional-geometry"
      }, {
        "field_name": "schema",
        "preset": "hidden_value",
        "field_value": "geographic_geometry"
      }, {
        "field_name": "boundary_source",
        "label": "Source of the boundary geometry",
        "form_placeholder": "e.g. PEPFAR/DHIS2/GADM",
        "required": true
      }]
    }, {
        "name": "Private Location Data",
        "about": "OPTIONAL - Sensitive location data to be kept private.",
        "resource_type": "geographic-private-data",
        "resource_fields": [{
          "field_name": "name",
          "preset": "hidden_value",
          "field_value": "Private Location Data"
        }, {
          "field_name": "description",
          "preset": "hidden_value",
          "field_value":  "Sensitive location data to be kept private."
        },{
          "field_name": "schema",
          "preset": "hidden_value",
          "field_value": "geographic_private_data"
        }, {
          "field_name": "resource_type",
          "preset": "hidden_value",
          "field_value": "geographic-private-data"
        }]
      }
  ],
  "resource_fields": [{
    "field_name": "schema",
    "preset": "hidden_value",
    "field_value": "geographic_location_hierachy"
    },
    {
      "field_name": "url",
      "label": "URL",
      "preset": "resource_url_upload"
    },
    {
      "field_name": "name",
      "label": "Name",
      "form_placeholder": "eg. January 2011 Gold Prices",
      "required": true
    },
    {
      "field_name": "notes",
      "label": "Notes",
      "form_snippet": "markdown.html",
      "form_placeholder": "Some useful notes about the data"
    },
    {
      "field_name": "format",
      "label": "Format",
      "preset": "resource_format_autocomplete"
    }, {
      "field_name": "restricted",
      "label": "Access Restriction",
      "preset": "restricted_fields",
      "validators": "restricted_json",
      "display_group": "Access Restriction",
      "choices": [{
          "value": "restricted",
          "label": "Restrictied to specified users and organizations"
        },
        {
          "value": "public",
          "label": "Public"
        }
      ],
      "form_attrs_users": {
        "data-module": "autocomplete",
        "data-module-tags": "",
        "data-module-source": "/api/2/util/user/autocomplete?q=?"
      },
      "form_attrs_orgs": {
        "data-module": "autocomplete",
        "data-module-tags": "",
        "data-module-source": "/api/2/util/organization/autocomplete?q=?"
      }
    }
  ]
}
