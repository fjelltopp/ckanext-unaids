{
  "fields": [{
      "name": "survey_id",
      "title": "Survey ID",
      "type": "string",
      "constraints": {
        "required": true
      }
    },
    {
      "name": "cluster_id",
      "title": "Cluster ID",
      "type": "string",
      "constraints": {
        "required": true
      }
    },
    {
      "name": "stratum",
      "title": "Stratum",
      "type": "string",
      "constraints": {
        "required": true
      }
    },
    {
      "name": "residence_type",
      "title": "Residence Type",
      "type": "string",
      "constraints": {
        "required": true,
				"enum": ["urban", "rural"]
      }
    },
    {
      "name": "latitude",
      "title": "Latitude",
      "type": "number",
      "decimalChar": ".",
      "constraints": {
        "required": true,
        "minimum": -180,
        "maximum": 180
      }
    },
    {
      "name": "longitude",
      "title": "Longitude",
      "type": "number",
      "decimalChar": ".",
      "constraints": {
        "required": true,
        "minimum": -90,
        "maximum": 90
      }
    },
    {
      "name": "area_id",
      "title": "Area ID",
      "type": "string",
      "constraints": {
        "required": true
      }
    }
  ],
  "primaryKey": ["survey_id", "cluster_id"],
  "foreignKeys": [{
      "fields": "survey_id",
      "reference": {
        "resource": "survey_metadata",
        "fields": "survey_id"
      }
    },
    {
      "fields": "area_id",
      "reference": {
        "resource": "geographic_data",
        "fields": "area_id"
      }
    }
  ]
}
