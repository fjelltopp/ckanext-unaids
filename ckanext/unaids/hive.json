{
    "scheming_version": 1,
    "dataset_type": "hive-dataset",
    "name": "HIVE",
    "about": "",
    "about_url": "http://github.com/ckan/ckanext-scheming",
    "add_data_on_create": false,
    "dataset_fields": [
        {
            "field_name": "title",
            "label": "Title",
            "preset": "title",
            "form_placeholder": "eg. A descriptive title"
        },
        {
            "field_name": "name",
            "label": "URL",
            "preset": "dataset_slug",
            "form_placeholder": "eg. my-dataset"
        },
        {
            "field_name": "notes",
            "label": "Description",
            "form_snippet": "markdown.html",
            "form_placeholder": "eg. Some useful notes about the data"
        },
        {
            "field_name": "tag_string",
            "label": "Tags",
            "preset": "tag_string_autocomplete",
            "form_placeholder": "HIVE, ANC, ART, SVY",
	    "default":"HIVE, ANC, ART, SVY"
        },
        {
            "field_name": "license_id",
            "label": "License",
            "form_snippet": "license.html",
            "help_text": "License definitions and additional information can be found at http://opendefinition.org/"
        },
	{
	    "field_name": "year",
	    "label": "Year",
	    "preset": "year"
	},{
	    "field_name": "geo-location",
	    "label": "Geographical Location",
	    "form_placeholder": "Country or province",
	    "preset": "country_list",
            "display_property": "dc:contributor"
	},
        {
            "field_name": "owner_org",
            "label": "Organization",
            "preset": "dataset_organization"
        },
        {
            "field_name": "url",
            "label": "Source",
            "form_placeholder": "http://example.com/dataset.json",
            "display_property": "foaf:homepage",
            "display_snippet": "link.html"
        },
        {
            "field_name": "version",
            "label": "Version",
            "validators": "ignore_missing unicode package_version_validator",
            "form_placeholder": "1.0"
        },
        {
            "field_name": "maintainer",
            "label": "Maintainer",
            "form_placeholder": "Joe Bloggs",
            "display_property": "dc:contributor"
        },
        {
            "field_name": "maintainer_email",
            "label": "Maintainer Email",
            "form_placeholder": "joe@example.com",
            "display_property": "dc:contributor",
            "display_snippet": "email.html",
            "display_email_name_field": "maintainer"
        }
    ],
    "resources":[
        {
            "name":  "ANC Data",
            "about": "A validated HIVE ANC spreadsheet.",
            "resource_type": "hive-anc",
            "resource_fields": [{
                "field_name": "name",
                "preset": "hidden_value",
                "field_value": "ANC Data"
            }, {
                "field_name": "validator_schema",
                "preset": "hidden_value",
                "field_value": "hive_anc"
            }, {
                "field_name": "resource_type",
                "preset": "hidden_value",
                "field_value": "hive-anc"
            }]
        },
        {
            "name":  "ART Data",
            "about": "A validated HIVE ART spreadsheet",
            "resource_type": "hive-art",
            "resource_fields": [{
                "field_name": "name",
                "preset": "hidden_value",
                "field_value": "ART Data"
            }, {
                "field_name": "validator_schema",
                "preset": "hidden_value",
                "field_value": "hive_art"
            }, {
                "field_name": "resource_type",
                "preset": "hidden_value",
                "field_value": "hive-art"
            }]
        },
        {
            "name":  "SVY Data",
            "about": "A validated HIVE SVY spreadsheet",
            "resource_type": "hive-svy",
            "resource_fields": [{
                "field_name": "name",
                "preset": "hidden_value",
                "field_value": "SVY Data"
            }, {
                "field_name": "validator_schema",
                "preset": "hidden_value",
                "field_value": "hive_svy"
            }, {
                "field_name": "resource_type",
                "preset": "hidden_value",
                "field_value": "hive-svy"
            }]
        },
        {
            "name":  "ADMIN Level 1 Shapefile",
            "about": "A validated HIVE ART spreadsheet",
            "resource_type": "hive-admin1",
            "resource_fields": [ {
		"field_name": "url",
		"label": "URL",
		"preset": "resource_url_upload_shapefile"
            },{
                "field_name": "name",
                "preset": "hidden_value",
                "field_value": "ADMIN Level 1 Shapefile"
            }, {
                "field_name": "manual_validation",
                "preset": "hidden_value",
                "field_value": "unvalidated"
            }, {
                "field_name": "resource_type",
                "preset": "hidden_value",
                "field_value": "hive-admin1"
	    },{
		"field_name": "format",
		"label": "Format",
		"preset": "hidden_value",
		"required": true,
		"field_value": "shp"
	    }]
			       
        },
        {
            "name":  "ADMIN Level 2 Shapefile",
            "about": "A validated HIVE ART spreadsheet",
            "resource_type": "hive-admin2",
            "resource_fields":[ {
		"field_name": "url",
		"label": "URL",
		"preset": "resource_url_upload_shapefile"
            },{
                "field_name": "name",
                "preset": "hidden_value",
                "field_value": "ADMIN Level 1 Shapefile"
            }, {
                "field_name": "manual_validation",
                "preset": "hidden_value",
                "field_value": "unvalidated"
            }, {
                "field_name": "resource_type",
                "preset": "hidden_value",
                "field_value": "hive-admin1"
	    },{
		"field_name": "format",
		"label": "Format",
		"preset": "hidden_value",
		"required": true,
		"field_value": "shp"
	    }]
        }
    ],
    "resource_fields": [
        {
            "field_name": "url",
            "label": "URL",
            "preset": "resource_url_upload"
        },
        {
            "field_name": "name",
            "label": "Name",
            "form_placeholder": "eg. January 2011 Gold Prices"
        },
        {
            "field_name": "description",
            "label": "Description",
            "form_snippet": "markdown.html",
            "form_placeholder": "Some useful notes about the data"
        },
        {
            "field_name": "format",
            "label": "Format",
            "preset": "resource_format_autocomplete",
            "required": true
        },{
	    "field_name": "restricted",
	    "label": "Access Restriction",
	    "preset": "restricted_fields",
	    "validators": "restricted_json",
	    "choices":
	    [
                {
                    "value": "restricted",
                    "label": "Restrictied to specified users and organizations"
                },
                {
                    "value": "public",
                    "label": "Public"
                }
            ],
	    "form_attrs_users": {
		"data-module": "autocomplete",
		"data-module-tags": "",
		"data-module-source": "/api/2/util/user/autocomplete?q=?"
            },
	    "form_attrs_orgs": {
		"data-module": "autocomplete",
		"data-module-tags": "",
		"data-module-source": "/api/2/util/organization/autocomplete?q=?"
            }
	}


    ]
}
